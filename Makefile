################################################################################
# Variables
################################################################################

CFLAGS=-g -Wall -Wextra -std=c99 -rdynamic
SOURCES=bandicoot.c
OBJECTS=$(patsubst %.c,%.o,${SOURCES})


################################################################################
# Targets
################################################################################

test: test.c ${OBJECTS}
	$(CC) $(CFLAGS) -o $@ ${OBJECTS} test.c
	chmod 700 $@


################################################################################
# Clean
################################################################################

clean: 
	rm -rf test *.o *.dSYM
